<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E7FE">


    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#8767EF"
        android:text="Get Started !"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="369dp"
        android:layout_height="304dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="10dp"
        android:paddingHorizontal="30dp"
        android:text=" The Routinizer app boosts productivity with a Pomodoro timer and personalized &quot;For You&quot; page. The Pomodoro technique enhances focus by breaking tasks into intervals with short breaks. The &quot;For You&quot; page offers tailored content for motivation and learning. Together, they optimize routines and drive productivity."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>